<FRACMain>
    dateTimeLabel: lbl_date_time
    canvas.before:
        BorderImage:
            # BorderImage behaves like the CSS BorderImage
            border: 10, 10, 10, 10
            source: 'button_white.png'
            pos: self.pos
            size: self.size
    cols: 1
    rows: 3
    padding: 0
    spacing: 10
    ScaleLabel:
        size_hint_y: 0.2
        text: "[color=#ff0000][b]F[/b]ace [b]R[/b]ecognition [b]A[/b]ccess [b]C[/b]ontrol [b]S[/b]ystem[/color]"
        size_hint: 1, 0.2
        markup: 'true'
        padding: dp(12), dp(12)
        font_size: self.height * 0.5
        outline_width: 0
        outline_color: 1,1,1

    Label:
        text: "Button 2"

    GridLayout:
        canvas.before:
            Color:
                rgba: 0, 1, 0, 0.5
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
        size_hint_y: 0.1
        cols: 4
        Label:
            text: "Status:"
        Label:
            text: "Locked"
        TextInput:
            text: ""
        Label:
            id: lbl_date_time
            text: "00:00:00\n01/01/1970"
            halign: 'center'

<ScaleLabel@Label>:
    _scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self._scale or 1.
            y: self._scale or 1.
    canvas.after:
        PopMatrix